<div class="container">
    <h1>Editar Usu√°rio</h1>
    <div>
        <form id="register-form">
            <div>
                <div class="form-group">
                    <label for="usuarioEmail" class="form-label">Email</label>
                    <input type="text" class="form-control" id="usuarioEmail" name="usuarioEmail">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioSenha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="usuarioSenha" name="usuarioSenha">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioNome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="usuarioNome" name="usuarioNome">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioTipo" class="form-label">Tipo:</label>
                    <select class="form-control" id="usuarioTipo" name="usuarioTipo">
                        <option selected value="0">Selecione...</option>
                        <% permissions.forEach((permission) => {%>
                            <option value="<%= permission.permissionId %>"><%= permission.permissionName %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="usuarioAtivo" name="usuarioAtivo">
                    <label class="form-check-label" for="usuarioAtivo">
                        Ativo
                    </label>
                </div>
            </div>
            <div>
                <button class="btn btn-primary" type="submit">Editar</button>
                <a class="btn btn-secondary" href="/usuarios">Voltar</a>
            </div>
        </form>
    </div>
</div>

<script src="/js/alterar.js"></script>